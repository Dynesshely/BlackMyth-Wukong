<Window x:Class="崩溃提示.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:崩溃提示"
        mc:Ignorable="d" ResizeMode="NoResize"
        Icon="favicon.ico" WindowStartupLocation="CenterScreen"
        Title="黑神话: 悟空 | 崩溃提示" Height="150" Width="400">
    <Grid>
        <StackPanel Margin="5">
            <TextBlock Margin="5" FontSize="28" Text="啊哦~ 游戏崩溃咯"/>
            <TextBlock Margin="5" FontSize="12" Text="错误代码: DEVELOPMENT NOT FINISHED"/>
            <TextBlock Margin="5" FontSize="12" Text="请通过'反馈工具'反馈错误, 并附上 game.dump 文件"/>
        </StackPanel>
        <Button HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="5" Padding="20,5"
                Click="Button_Click_Exit" Content="纸刀捏"/>
    </Grid>
</Window>
